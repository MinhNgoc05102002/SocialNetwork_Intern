    <script>
        //Dark mode
        (function (window, document, undefined) {
            'use strict';
            if (!('localStorage' in window)) return;
            var nightMode = localStorage.getItem('gmtNightMode');
            if (nightMode) {
                document.documentElement.className += ' dark';
            }
        })(window, document);


        (function (window, document, undefined) {

            'use strict';

            // Feature test
            if (!('localStorage' in window)) return;

            // Get our newly insert toggle
            var nightMode = document.querySelector('#night-mode');
            if (!nightMode) return;

            // When clicked, toggle night mode on or off
            nightMode.addEventListener('click', function (event) {
                event.preventDefault();
                document.documentElement.classList.toggle('dark');
                if (document.documentElement.classList.contains('dark')) {
                    localStorage.setItem('gmtNightMode', true);
                    return;
                }
                localStorage.removeItem('gmtNightMode');
            }, false);

        })(window, document);


        //responsive
        var myDiv = document.getElementById('myTabContent');
        var listdiv = document.getElementById('Tablist');
        var tab = document.getElementById('Tab');
        var tablist = document.getElementById('tabLi');
        window.addEventListener('resize', function () {
            if (window.innerWidth <= 768) { // 768 is the width of the md breakpoint
                myDiv.classList.remove('border-start');
                myDiv.classList.add('border-top');
                listdiv.classList.remove('border-end');
                listdiv.classList.add('border-bottom');
                tab.classList.remove('row');
                tablist.classList.add('px-3')
            } else {
                myDiv.classList.remove('border-top');
                myDiv.classList.add('border-start');
                listdiv.classList.remove('border-bottom');
                listdiv.classList.add('border-end');
                tab.classList.add('row');
                tablist.classList.remove('px-3')
            }
        });

        //switch element
        // Get the switch element
        var switch1 = document.querySelector('.switch-1 input[type="checkbox"]');

        // Get the text elements that need to be changed
        var type = document.querySelector('.flex .type');

        // Add an event listener to the switch element
        switch1.addEventListener('change', function (event) {
            if (event.target.checked) {
                type.textContent = "Public (Everyone can see your activity).";
            } else {
                type.textContent = "Private (No one can see your activity)";
            }
        });

        myBtn.addEventListener("click", function () {
            var modal = new bootstrap.Modal(myModal);
            modal.show();

            var noBtn = myModal.querySelector(".no-button");
            noBtn.addEventListener("click", function () {
                modal.hide();
            });
        });

        function changeProfile(){
            $.ajax({
                url: '@Url.Action("setting")',
                type: 'POST',
                data: {
                    fullName: $('#FullName').val(),
                    aboutMe: $('#AboutMe').val(),
                    location: $('#Location').val(),
                    phone: $('#Phone').val(),
                    DayOfBirth: $('#datepicker').val(),
                    gender: $('#gender').val(),
                    accountType: $('input[name=accountType]:checked').val(),
                },
                success: function (result) {
                    window.location.href = '@Url.Action("setting")';
                },
                error: function(xhr, textStatus, errorThrown) {
                    console.log(textStatus);
                }
            });
        }
    </script>

